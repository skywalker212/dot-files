#!/bin/sh
# Notify me with notify-send if my battery is below 25%.
# You can set this to run via cron.

[ "$(cat /sys/class/power_supply/BAT1/status)" = "Charging" ] && exit
[ "$(cat /sys/class/power_supply/BAT1/capacity)" -lt 10 ] &&
export $(dbus-launch) && notify-send -u critical "Battery critically low."
